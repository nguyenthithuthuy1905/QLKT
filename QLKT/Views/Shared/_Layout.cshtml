<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Hutech-Quản lý khảo thí</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QLKT.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  
</head>
<body>

    <!-- Sidebar bên trái -->
    <nav class="sidebar">
        <div class="sidebar-header text-center">
            <img src="~/Images/logo.jpg" alt="HUTECH Logo" class="img-fluid" style="width: 100%; padding: 0px; margin:0px">
        </div>
        <ul>
            <li><a href="/Dashboard/Index">📊 Dashboard</a></li>
            <li><a href="/CamDoan/chuabosung">📑 Cam đoan chưa bổ sung</a></li>
            <li><a href="/ViPham ">⚠️ Vi phạm quy chế thi</a></li>
            <li><a href="/SuCo/Index">🚨 Sự cố bất thường</a></li>
            <li><a href="/SinhVien/Index ">🔍 Tìm kiếm sinh viên</a></li>
            <li><a href="/Import/Index">📥 Import dữ liệu</a></li>
            <li><a href="/Settings/Index?id=2280603167">⚙️ Cài đặt</a></li>
        </ul>
    </nav>

    <!-- Nội dung chính -->
    <div class="content">
        <header class="navbar navbar-expand-lg navbar-light bg-light border-bottom mb-3">
            <div class="container-fluid">
                <span class="navbar-brand">QUẢN LÝ KHẢO THÍ - PHÒNG ĐÀO TẠO</span>
            </div>
        </header>

        <div class="container">
            <main role="main">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted mt-4">
            <div class="container">
                &copy; 2025 - QLKT - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
