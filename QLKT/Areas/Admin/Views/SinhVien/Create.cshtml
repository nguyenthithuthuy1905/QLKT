@model QLKT.Models.SinhVien

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Thêm sinh viên";
}

<h2>Thêm sinh viên mới</h2>

<form method="post">
    <div class="form-group">
        <label>Mã Sinh Viên</label>
        <input type="text" name="MASV" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Họ và tên</label>
        <input type="text" name="HoLot" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Tên Sinh Viên</label>
        <input type="text" name="TenSV" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Lớp</label>
        <input type="text" name="MaLop" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Ngày sinh</label>
        <input type="date" name="NgaySinh" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
