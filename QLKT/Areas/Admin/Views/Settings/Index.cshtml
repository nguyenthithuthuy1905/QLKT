@model QLKT.Models.UserInfoViewModel
@{
    ViewData["Title"] = "Thông tin tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2 class="my-4" >Thông tin tài khoản (Admin)</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <img src="~/Images/Ảnh chân dung.jpg" class="img-fluid rounded-circle" alt="User Avatar" style="width: 150px; height: 150px;">
                    <h5 class="mt-3">@Model.UserName</h5>
                    <p class="text-muted">Administrator</p>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Index" method="post">
                        <div class="form-group">
                            <label for="phone">Số điện thoại</label>
                            <input type="text" id="phone" name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="email">Địa chỉ email</label>
                            <input type="email" id="email" name="Email" value="@Model.Email" class="form-control" />
                        </div>

                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-success">Cập nhật thông tin</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
