@model List<QLKT.Models.SuCoBatThuong>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Danh sách sự cố bất thường";
}

<h2>Danh sách sự cố bất thường</h2>

<!-- Form tìm kiếm -->
<form method="get">
    <input type="text" name="search" placeholder="Nhập mã sự cố..." />
    <button type="submit">Tìm kiếm</button>
</form>

<!-- Hiển thị thông báo nếu không tìm thấy -->
@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-warning mt-3">
        @ViewBag.Message
    </div>
}

<!-- Nút Thêm Sự Cố -->
<a href="/Admin/SuCo/Create" class="btn btn-primary mt-3">Thêm Sự Cố</a>

<!-- Bảng danh sách sự cố -->
<table class="table mt-3">
    <thead>
        <tr>
            <th>Mã Sự Cố</th>
            <th>Loại Sự Cố</th>
            <th>Ngày Thi</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaSuCo</td>
                <td>@item.LoaiSuCo.TenLoaiSuCo</td>
                <td>@item.NgayThi</td>
                <td>
                    <a href="/Admin/SuCo/Edit?id=@item.MaSuCo" class="btn btn-warning">Sửa</a>
                    <a href="/Admin/SuCo/Delete?id=@item.MaSuCo" class="btn btn-danger" onclick="return confirm('Bạn chắc chắn muốn xóa sự cố này?')">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
