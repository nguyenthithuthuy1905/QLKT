@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Import Dữ Liệu";
}

<h2>Import Dữ Liệu</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<!-- Form for importing CSV -->
<form method="post" enctype="multipart/form-data" action="/Admin/Import/ImportCSV">
    <div class="form-group">
        <label>Import từ file CSV</label>
        <input type="file" name="file" accept=".csv" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Import CSV</button>
</form>

<!-- Form for importing Excel -->
<form method="post" enctype="multipart/form-data" action="/Admin/Import/ImportExcel">
    <div class="form-group">
        <label>Import từ file Excel</label>
        <input type="file" name="file" accept=".xlsx" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Import Excel</button>
</form>
