@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5>Tổng số sinh viên</h5>
                <h3>@ViewBag.TotalStudents</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <h5>Tổng số vi phạm</h5>
                <h3>@ViewBag.TotalViolations</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark">
            <div class="card-body">
                <h5>Tổng số sự cố</h5>
                <h3>@ViewBag.TotalIncidents</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5>Tổng số cam đoan</h5>
                <h3>@ViewBag.TotalCommitments</h3>
            </div>
        </div>
    </div>
</div>

<h2>Biểu đồ thống kê</h2>

<div class="row">
    <div class="col-md-4">
        <canvas id="violationChart"></canvas>
    </div>
    <div class="col-md-4">
        <canvas id="incidentChart"></canvas>
    </div>
    <div class="col-md-4">
        <canvas id="commitmentChart"></canvas>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var violationData = JSON.parse('@Html.Raw(ViewBag.ViolationStats)');
        var incidentData = JSON.parse('@Html.Raw(ViewBag.IncidentStats)');
        var commitmentData = JSON.parse('@Html.Raw(ViewBag.CommitmentStats)');

        var violationChart = new Chart(document.getElementById("violationChart"), {
            type: 'bar',
            data: {
                labels: violationData.map(v => v.Type),
                datasets: [{
                    label: 'Số lượng vi phạm',
                    data: violationData.map(v => v.Count),
                    backgroundColor: 'red'
                }]
            }
        });

        var incidentChart = new Chart(document.getElementById("incidentChart"), {
            type: 'bar',
            data: {
                labels: incidentData.map(i => i.Type),
                datasets: [{
                    label: 'Số lượng sự cố',
                    data: incidentData.map(i => i.Count),
                    backgroundColor: 'orange'
                }]
            }
        });

        var commitmentChart = new Chart(document.getElementById("commitmentChart"), {
            type: 'bar',
            data: {
                labels: commitmentData.map(c => c.Type),
                datasets: [{
                    label: 'Số lượng cam đoan',
                    data: commitmentData.map(c => c.Count),
                    backgroundColor: 'green'
                }]
            }
        });
    });
</script>
